---
import Navigation from '../components/Navigation.astro';

export interface Props {
	title: string;
	description?: string;
	image?: string;
	keywords?: string;
}

const { 
	title, 
	description = "Backend engineer with 7+ years experience and technical educator reaching millions of developers worldwide",
	image = "/images/og-default.png",
	keywords = "backend engineer, software engineer, technical writer, Laravel, PHP, Docker, Kubernetes, freeCodeCamp"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const siteTitle = import.meta.env.SITE_TITLE;
const siteAuthor = import.meta.env.SITE_AUTHOR;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="keywords" content={keywords} />
		<meta name="author" content={siteAuthor} />
		<meta name="robots" content="index, follow" />
		<meta name="theme-color" content="#212529" />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:site_name" content={siteTitle} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.site)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.site)} />
		<meta property="twitter:creator" content="@frhnhsin" />

		<!-- Fonts and CSS -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
		<link href="https://unpkg.com/nes.css@2.3.0/css/nes.min.css" rel="stylesheet" />
		
		<style>
			:global(html) {
				scroll-behavior: smooth;
			}
			
			:global(body) {
				font-family: 'Press Start 2P', cursive;
				background-color: #212529;
				color: #fff;
				margin: 0;
				padding: 2rem;
				line-height: 1.6;
			}
			
			:global(a) {
				color: #92cc41;
				text-decoration: none;
			}
			
			:global(a:hover) {
				color: #7fb530;
			}
			
			:global(.container) {
				max-width: 1200px;
				margin: 0 auto;
				padding: 0 1rem;
			}
			
			:global(.nes-container.is-dark) {
				background-color: #212529;
			}
			
			:global(.nes-btn) {
				font-family: 'Press Start 2P', cursive;
			}
			
			:global(h1, h2, h3, h4, h5, h6) {
				font-family: 'Press Start 2P', cursive;
				margin-bottom: 1rem;
			}
			
			:global(p) {
				margin-bottom: 1rem;
			}
		</style>
	</head>
	<body>
		<div class="container">
			<Navigation />
			<slot />
		</div>
	</body>
</html>